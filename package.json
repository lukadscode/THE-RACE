    "demo": "cross-env DEMO=1 node ./server/erg-relay.js"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^10.1.0"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
